        android:text="Dias Disponiveis" />

    <Spinner
        android:id="@+id/spinnerdiasmotorista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btncadastrarlocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar" />
